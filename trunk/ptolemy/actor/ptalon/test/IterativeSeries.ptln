IterativeSeries is {
	actor Scale = ptolemy.actor.lib.Scale;
	parameter n;
	inport input;
	outport output;
	if <n >= 0/> {
		relation r<0/>;
		for a initially <1/> <a <= n/> {
			relation r<a/>;
			Scale(input := r<a - 1/>, output := r<a/>);
		} next <a + 1/>
		this(input := r<0/>, output := r<n/>);
	} else {
	}
}