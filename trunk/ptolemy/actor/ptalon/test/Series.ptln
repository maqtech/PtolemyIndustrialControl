import ptolemy.actor.ptalon.test.Link;

Series is {
	parameter transformer;
	intparameter n;
	inport input;
	outport output;
	if (n == 0) {
		parameter hidden;
		Link(a := transformer, b := transformer, 
			input := input, output := output);
	} else {
		Link(a := transformer, b := Series(n := n - 1),
			input := input, output := output);
	}
}
