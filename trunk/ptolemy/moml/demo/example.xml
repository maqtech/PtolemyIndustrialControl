<?xml version="1.0" standalone="no"?>
<!DOCTYPE model SYSTEM "moml.dtd">
<!-- The name and class of the top-level actor are specified as -->
<!-- defaults in the DTD. -->
<model>
  <doc>
  Text here documents the model. For example:
  This model demonstrates MoML, the XML-based modeling language.
  </doc>

  <director class="ptolemy.domains.sdf.kernel.SDFDirector">
    <parameter name="iterations" value="100"/>
  </director>

  <!-- Define the actors -->
  <actor name="ramp" class="ptolemy.actor.lib.Ramp">
    <parameter name="step" value="0.1"/>
    <!-- hints for a GUI... -->
    <icon xpos="100" ypos="100"
           modifiers="$CLASSPATH/ptolemy/actor/lib/icons/Ramp.icon"/>
  </actor>
  <actor name="display" class="ptolemy.actor.gui.SequencePlotter">
    <!-- reference to a "plotML" file for configuration information -->
    <!-- FIXME parameter name="configuration" value="display.pml" /-->
    <icon xpos="200" ypos="100"
          modifiers="$CLASSPATH/ptolemy/actor/gui/icons/TimedPlotter.icon"/>
  </actor>
  <actor name="recorder" class="ptolemy.actor.lib.Recorder">
    <icon xpos="200" ypos="200"
          modifiers="$CLASSPATH/ptolemy/actor/lib/icons/Recorder.icon"/>
  </actor>
  <!-- To do: Link parameters with on-screen controls here. -->

  <!-- Make the connections -->
  <connection port1="ramp.output" port2="display.input" name="c">
    <vertex name="v" xpos="150" ypos="100"/>
  </connection>
  <!-- A link adds to a specified connection, and may also give a vertex -->
  <link port="recorder.input" connection="c" vertex="v">
    <!-- optional vertex elements here for GUI purposes -->
  </link>

</model>