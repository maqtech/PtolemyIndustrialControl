ME =		ptolemy/filter/view

DIRS =

# Root of the Java directory
ROOT =		../../..

CLASSPATH =	$(ROOT)

# Get configuration info
CONFIG =	$(ROOT)/mk/ptII.mk
include $(CONFIG)

# Flags to pass to javadoc. (Override value in ptII.mk)
JDOCFLAGS = 	-author -version -public

# Used to build jar files
PTPACKAGE = 	view
PTDIST =	$(PTPACKAGE)$(PTVERSION)
PTCLASSJAR = 	$(PTPACKAGE).jar

JSRCS = \
       InteractComponent.java \
       CmdLineArgException.java \
       PlotPoint.java \
       PlotBox.java \
       Plot.java \
       SelectObjectListener.java \
       DragObjectListener.java \
       InteractPlot.java \
       FilterView.java \
       PlotView.java \
       IIRFiltSetView.java \
       PoleZeroView.java \
       FreqView.java \
       ImpulseView.java \
       TransFunctView.java \
       ViewController.java

EXTRA_SRCS =	$(JSRCS)

# Files or directories that are present, but that 'make checkjunk'
# should not complain about
MISC_FILES =	$(DIRS)

# make checkjunk will not report OPTIONAL_FILES as trash
# make distclean removes OPTIONAL_FILES
OPTIONAL_FILES = \
	doc \
	$(PTCLASSJAR) \
	'FilterView$$ViewWinAdapter.class' \
	'FreqView$$FreqPlotPanel.class' \
	'IIRFiltSetView$$FiltSet.class' \
	'InteractPlot$$ChangeXY.class' \
	'Plot$$Format.class' \
	'PlotBox$$DragListener.class' \
	'PlotBox$$FillButtonListener.class' \
	'PlotBox$$ZoomListener.class' \
	'PoleZeroView$$NewPoleZeroBox.class' \
	'TransFunctView$$TransPane.class'

JCLASS = $(JSRCS:%.java=%.class)


all: jclass
install: jclass $(PTCLASSJAR)


depend:
	@echo "no dependencies in this directory"

# Get the rest of the rules
include $(ROOT)/mk/ptcommon.mk






