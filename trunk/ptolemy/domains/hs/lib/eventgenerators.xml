<?xml version="1.0" standalone="no"?>
<!DOCTYPE plot PUBLIC "-//UC Berkeley//DTD MoML 1//EN"
    "http://ptolemy.eecs.berkeley.edu/xml/dtd/MoML_1.dtd">

<!-- Library of actors which take continuous inputs -->
<!-- and produce discrete outputs.                  -->
<entity name="ToDiscrete" class="ptolemy.moml.EntityLibrary">
  <configure>
    <?moml
      <group>
        <entity name="EventSource"
                class="ptolemy.domains.hs.lib.EventSource"/>
        <entity name="LevelCrossingDetector"
                class="ptolemy.domains.hs.lib.LevelCrossingDetector"/>
        <entity name="PeriodicSampler"
                class="ptolemy.domains.hs.lib.PeriodicSampler"/>
        <entity name="TriggeredSampler"
                class="ptolemy.domains.hs.lib.TriggeredSampler"/>
        <entity name="ThresholdMonitor"
                class="ptolemy.domains.hs.lib.ThresholdMonitor"/>
        <entity name="ZeroCrossingDetector"
                class="ptolemy.domains.hs.lib.ZeroCrossingDetector"/>
      </group>
    ?>
  </configure>
</entity>

