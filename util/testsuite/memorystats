# Lines look like
# 719 ms. Memory: 3520K Free: 2212K (63%)


awk 'BEGIN {min=99999999}
    NR > 1  {   if ( $0 ~ /ms. Memory:/) {
		    count++;
		    sum+= $1;
		    if ($1 < min) {
			min = $1
		    } else if ($1 > max) {
			max = $1
		    }
		    memory=substr($4, 1, length($4)-1) + 0
		    free=substr($6, 1, length($6)-1) + 0

		    memorySum+=memory;
		    freeSum+=free;
		}
	    }
	END {   timeAverage= int(sum/count+0.5)
		percentFree=int (((freeSum/count)+0.0)/((memorySum/count)+0.0) * 100.0 + 0.5)
		print description ": Averages of second and succeeding " count-1 " runs:" 
		print description " ave: " timeAverage " ms. Memory: " memorySum/count "K Free: " freeSum/count "K ("  percentFree "%)"
}' description="$1" -

