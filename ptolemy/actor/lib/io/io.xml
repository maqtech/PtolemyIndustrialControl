<?xml version="1.0" standalone="no"?>
<!DOCTYPE plot PUBLIC "-//UC Berkeley//DTD MoML 1//EN"
    "http://ptolemy.eecs.berkeley.edu/xml/dtd/MoML_1.dtd">
<entity name="io" class="ptolemy.moml.EntityLibrary">
  <configure>
    <?moml
      <group>
      <doc>Actors that read and write to the file system or network.</doc>

      <entity name="ArrowKeySensor" class="ptolemy.actor.lib.gui.ArrowKeySensor">
        <doc>Create a JFrame for sensing up, left, right, and down arrow key presses and releases</doc>
      </entity>

      <entity name="DatagramReader"
              class="ptolemy.actor.lib.net.DatagramReader">
          <property name="encoding">
            <property name="style" class="ptolemy.actor.gui.style.ChoiceStyle">
              <property name="for_Ptolemy_parser" 
                     value="for_Ptolemy_parser"
                     class="ptolemy.kernel.util.StringAttribute"/>
              <property name="raw_integers_little_endian" 
                     value="raw_integers_little_endian"
                     class="ptolemy.kernel.util.StringAttribute"/>
              <property name="raw_low_bytes_of_integers" 
                     value="raw_low_bytes_of_integers"
                     class="ptolemy.kernel.util.StringAttribute"/>
            </property>
         </property>
      </entity>

      <entity name="DatagramWriter"
              class="ptolemy.actor.lib.net.DatagramWriter">
          <property name="encoding">
            <property name="style" class="ptolemy.actor.gui.style.ChoiceStyle">
              <property name="for_Ptolemy_parser" 
                     value="for_Ptolemy_parser"
                     class="ptolemy.kernel.util.StringAttribute"/>
              <property name="raw_integers_little_endian" 
                     value="raw_integers_little_endian"
                     class="ptolemy.kernel.util.StringAttribute"/>
              <property name="raw_low_bytes_of_integers" 
                     value="raw_low_bytes_of_integers"
                     class="ptolemy.kernel.util.StringAttribute"/>
            </property>
         </property>
      </entity>

      <entity name="DoubleReader" class="ptolemy.actor.lib.DoubleReader">
        <doc>Read in doubles from either stdin or a URL</doc>
      </entity>

      <entity name="ExpressionReader" class="ptolemy.actor.lib.io.ExpressionReader">
        <doc>Read one expression per line from a text file and output the result of evaluating the expression</doc>
      </entity>

      <entity name="ExpressionWriter" class="ptolemy.actor.lib.io.ExpressionWriter">
        <doc>Write one token per line to a text file as an expression</doc>
      </entity>

      <entity name="LineReader" class="ptolemy.actor.lib.io.LineReader">
        <doc>Read one line at a time from a text file and output as a string</doc>
      </entity>
      <entity name="LineWriter" class="ptolemy.actor.lib.io.LineWriter">
        <doc>Write the value of a string token, one per line, to a text file.</doc>
      </entity>

      <entity name="SystemClipboard" class="ptolemy.actor.lib.gui.SystemClipboard">
        <doc>Gives access to the system clipboard</doc>
      </entity>

      <entity name="URLDirectoryReader"
              class="ptolemy.actor.lib.URLDirectoryReader">
         <doc>Read a directory and output each file or subdirectory</doc>
      </entity>

      </group>
    ?>
  </configure>
</entity>
























