<?xml version="1.0" standalone="no"?>
<!DOCTYPE model SYSTEM "../../moml/moml.dtd">

<model name="hello world" class="ptolemy.actor.TypedCompositeActor">
<doc>ramp-recorder...  a good first start</doc>

<director name="director" class="ptolemy.domains.sdf.kernel.SDFDirector">
<attribute name="iterations" value="4"/>
</director>

<entity name="Ramp1" class="ptolemy.actor.lib.Ramp">
<attribute name="init" value="0"/>
<attribute name="step" value="4"/>
    <rendition class="ptolemy.schematic.util.LibraryIcon">
	<location x="50" y="50"/>
        <configure>generic.source</configure>
    </rendition>
</entity>

<entity name="Plotter1" class="ptolemy.actor.gui.SequencePlotter">
    <rendition class="ptolemy.schematic.util.LibraryIcon">
	<location x="150" y="50"/>
       	<configure>generic.sink</configure>
    </rendition>
</entity>

<relation name="R1" class="ptolemy.actor.TypedIORelation">
<vertex name="root">
<location x="100" y="50"/>
</vertex>
</relation>

<link port="Plotter1.input" relation="R1"/>
<link port="Ramp1.output" relation="R1"/>

</model>

