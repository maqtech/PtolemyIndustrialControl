<?xml version="1.0" standalone="no"?>
<!DOCTYPE model PUBLIC "-//UC Berkeley//DTD MoML 1//EN"
    "http://ptolemy.eecs.berkeley.edu/xml/dtd/MoML_1.dtd">
<model name="AudioSourceSinkDemo" class="ptolemy.actor.TypedCompositeActor">
    <director name="SDF" class="ptolemy.domains.sdf.kernel.SDFDirector">
        <property name="iterations" class="ptolemy.data.expr.Parameter" value="0">
        </property>
    </director>
    <doc>A simple model demonstrating the use of the AudioSource and 
AudioSink actors. The model consists of an AudioSource connected
to an AudioSink.</doc>
    <property name="sampleRate" class="ptolemy.data.expr.Parameter" value="44100">
        <doc>Sampling Rate in Hz</doc>
    </property>
    <entity name="soundSource" class="ptolemy.domains.sdf.lib.javasound.AudioSource">
        <property name="pathName" class="ptolemy.data.expr.Parameter" value="&quot;soundFile.wav&quot;">
        </property>
        <property name="source" class="ptolemy.data.expr.Parameter" value="&quot;mic&quot;">
        </property>
        <property name="sampleRate" class="ptolemy.data.expr.Parameter" value="sampleRate">
        </property>
        <property name="sampleSizeInBits" class="ptolemy.data.expr.Parameter" value="16">
        </property>
        <property name="channels" class="ptolemy.data.expr.Parameter" value="1">
        </property>
        <property name="bufferSize" class="ptolemy.data.expr.Parameter" value="4096">
        </property>
        <property name="tokenProductionRate" class="ptolemy.data.expr.Parameter" value="256">
        </property>
        <rendition name="_icon" class="ptolemy.vergil.toolbox.EditorIcon">
            <location value="100.25, 134.75"/>
        </rendition>
        <port name="output" class="ptolemy.domains.sdf.kernel.SDFIOPort">
            <property name="output"/>
            <property name="multiport"/>
            <property name="tokenConsumptionRate" class="ptolemy.data.expr.Parameter" value="0">
            </property>
            <property name="tokenInitProduction" class="ptolemy.data.expr.Parameter" value="0">
            </property>
            <property name="tokenProductionRate" class="ptolemy.data.expr.Parameter" value="256">
            </property>
        </port>
    </entity>
    <entity name="soundSink" class="ptolemy.domains.sdf.lib.javasound.AudioSink">
        <property name="pathName" class="ptolemy.data.expr.Parameter" value="&quot;soundFile.wav&quot;">
        </property>
        <property name="sink" class="ptolemy.data.expr.Parameter" value="&quot;speaker&quot;">
        </property>
        <property name="sampleRate" class="ptolemy.data.expr.Parameter" value="sampleRate">
        </property>
        <property name="sampleSizeInBits" class="ptolemy.data.expr.Parameter" value="16">
        </property>
        <property name="channels" class="ptolemy.data.expr.Parameter" value="1">
        </property>
        <property name="bufferSize" class="ptolemy.data.expr.Parameter" value="4096">
        </property>
        <property name="tokenConsumptionRate" class="ptolemy.data.expr.Parameter" value="256">
        </property>
        <rendition name="_icon" class="ptolemy.vergil.toolbox.EditorIcon">
            <location value="302.5, 134.75"/>
        </rendition>
        <port name="input" class="ptolemy.domains.sdf.kernel.SDFIOPort">
            <property name="input"/>
            <property name="multiport"/>
            <property name="tokenConsumptionRate" class="ptolemy.data.expr.Parameter" value="256">
            </property>
            <property name="tokenInitProduction" class="ptolemy.data.expr.Parameter" value="0">
            </property>
            <property name="tokenProductionRate" class="ptolemy.data.expr.Parameter" value="0">
            </property>
        </port>
    </entity>
    <relation name="r1" class="ptolemy.actor.TypedIORelation">
    </relation>
    <link port="soundSource.output" relation="r1"/>
    <link port="soundSink.input" relation="r1"/>
</model>
