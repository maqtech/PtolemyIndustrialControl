<?xml version="1.0" encoding="iso-8859-1" standalone="yes" ?>

<!-- 
    A sample installation file.
    Use it as a base for your own installers :-)
    
    To compile it :
    - go in the bin directory where you installed IzPack
    - call "compile ../sample/install.xml -b ../sample"
-->

<installation version="1.0">

    <!-- 
        The info section.
        The meaning of the tags should be natural ...
    -->
    <info>
        <appname>Ptolemy II</appname>
        <appversion>6.0-alpha</appversion>
	<appsubpath>Ptolemy/ptII6.0-alpha</appsubpath>
        <url>http://ptolemy.eecs.berkeley.edu/ptolemyII</url>
	<javaversion>1.4</javaversion>
    </info>
    
    <!-- 
        The gui preferences indication.
    -->
    <guiprefs width="640" height="480" resizable="no"/>
    
    <!-- 
        The locale section.
    -->
    <locale>
        <langpack iso3="eng"/>
    </locale>

    <!-- 
        The resources section.
        The ids must be these ones if you want to use the LicencePanel and/or the InfoPanel.
    -->
    <resources>
        <res id="LicencePanel.licence" src="../../copyright.txt"/>
        <res id="HTMLInfoPanel.info" src="../../README.txt"/>
        <!res id="TargetPanel.dir.windows" src="c:/Ptolemy/ptII6.0-alpha/"/!>
    </resources>
    
    <!-- 
        The panels section.
        We indicate here which panels we want to use. The order will be respected.
    -->
    <panels>
        <panel classname="HelloPanel"/>
        <panel classname="HTMLInfoPanel"/>
        <panel classname="LicencePanel"/>
        <panel classname="TargetPanel"/> 
        <panel classname="PacksPanel"/>
        <panel classname="InstallPanel"/>
        <panel classname="FinishPanel"/>
    </panels>
    
    <!-- 
        The packs section.
        We specify here our packs.
    -->
    <packs>
        <pack name="Base" required="yes">
            <description>The base files</description>
            <file src="../../README.txt" targetdir="$INSTALL_PATH"/>
            <file src="../../copyright.txt" targetdir="$INSTALL_PATH"/>
            <!--file src="../../unjar_dist" targetdir="$INSTALL_PATH"/-->
            <file src="script.bat" targetdir="$INSTALL_PATH"/>
            <parsable targetfile="$INSTALL_PATH/script.bat"/> <!-- The file will be parsed -->
        </pack>
        <pack name="Docs" required="no">
            <description>The documentation</description>
            <file src="../../doc/design" targetdir="$INSTALL_PATH/doc/design"/>
            <file src="../../designdocv1.exe" targetdir="$INSTALL_PATH/bin"/>
            <file src="../../designdocv2.exe" targetdir="$INSTALL_PATH/bin"/>
            <file src="../../designdocv3.exe" targetdir="$INSTALL_PATH/bin"/>
            <file src="../../hyvisualdoc.exe" targetdir="$INSTALL_PATH/bin"/>
            <file src="../../visualsensedoc.exe"
	          targetdir="$INSTALL_PATH/bin"/>
        </pack>
        <pack name="Sources" required="no">
            <description>The sources</description>
            <file src="src" targetdir="$INSTALL_PATH"/>
        </pack>
    </packs>
    
</installation>
