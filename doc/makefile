ME =		doc

# Sub directories to run make in.
DIRS =		 coding design tour tutorial ui  #internals #usersGuides

# Root of Ptolemy II directory
ROOT =		..

# Get configuration info
CONFIG =	$(ROOT)/mk/ptII.mk
include $(CONFIG)

# Used to build jar files
PTPACKAGE = 	doc
PTDIST =	$(PTPACKAGE)$(PTVERSION)
PTCLASSJAR =

# Files in this directory (but not the subdirectories) that should go
# into docConfig.jar because files in ptolemy/config refer to them.
#
# We use a separate variable here so that we can refer to these files
# in EXTRA_SRCS with out have to duplicate the names.  
#
UI_FILES_TO_BE_JARED = \
	acks.htm \
	authors.htm

EXTRA_SRCS = \
	$(UI_FILES_TO_BE_JARED) \
	banner.htm \
	body.htm \
	buttons.htm \
	codegen.htm \
	contents.css \
	contentsheader.htm \
	default.css \
	docbody.htm \
	docbuttons.htm \
	docs.htm \
	doctoc.htm \
	domains.htm \
	expression.htm \
	footer.htm \
	help.htm \
	index.htm \
	install.htm \
	javahtml.awk \
	main.htm \
	mainheader.htm \
	ptII1.0.release.htm \
	ptIIfaq.htm \
	toc.css \
	toc.htm \
	troubleshooting.htm \
	types.htm

# Derived files that are preprocessed for use within vergil.
VERGIL_DOCS = \
	mainVergil.htm \
	ptII1.0.releaseVergil.htm \
	troubleshootingVergil.htm

# All the doc/ files that are referred to by files in ptolemy/config
PTAUXALLJAR =	docConfig.jar

# Files in this directory and any subdirectories that should go into
# docConfig.jar because files in ptolemy/config refer to them.
# FIXME: doc/design/usingVergil/index.htm is a derived file
# that refers to other files. 
OTHER_FILES_TO_BE_JARED = \
	$(VERGIL_DOCS) \
	$(UI_FILES_TO_BE_JARED) \
	img/ptIIplanet.gif
	#doc/design/usingVergil/index.htm 



# Sources that may or may not be present, but if they are present, we don't
# want make checkjunk to barf on them.
MISC_FILES =	\
	$(DIRS) \
	$(VERGIL_DOCS) \
	img \
	tutorial

# make checkjunk will not report OPTIONAL_FILES as trash
# make distclean removes OPTIONAL_FILES
OPTIONAL_FILES =	\
	codeDoc \
	codeDocPtiny \
	uml

# Java packages for copernicus 
COPERNICUSPACKAGES = \
			ptolemy.copernicus.kernel \
			ptolemy.copernicus.c \
			ptolemy.copernicus.java \
			ptolemy.copernicus.jhdl

# Java packages for codegen
CODEGENPACKAGES = \
			ptolemy.lang \
			ptolemy.lang.java \
			ptolemy.lang.java.extended \
			ptolemy.lang.java.nodetypes \
			ptolemy.lang.java.tree \
			ptolemy.codegen \
			ptolemy.codegen.saveasjava \
			ptolemy.domains.sdf.codegen

CODEGENJSRCS = \
			../ptolemy/lang/*.java \
			../ptolemy/lang/java/*.java \
			../ptolemy/lang/java/extended/*.java \
			../ptolemy/lang/java/nodetypes/*.java \
			../ptolemy/lang/java/tree/*.java \
			../ptolemy/codegen/*.java \
			../ptolemy/codegen/saveasjava/*.java \
			../ptolemy/domains/sdf/codegen


PTINYPACKAGES = \
			ptolemy.actor.lib \
			ptolemy.actor.lib.conversions \
			ptolemy.actor.lib.gui \
			ptolemy.actor.lib.logic \
			ptolemy.domains.ct.lib \
			ptolemy.domains.de.lib \
			ptolemy.domains.sdf.lib \
			ptolemy.domains.sdf.lib.vq

# GR domain uses Java 3D, which is not part of the default
# JDK1.3 download, so we can't include the GR domain classes in
# the default build.
#GRPACKAGES =		ptolemy.domains.gr.kernel \
#			ptolemy.domains.gr.lib

# Javasound is not part of JDK1.2
#JAVASOUNDPACKAGES =	ptolemy.actor.lib.javasound \
#			ptolemy.media.javasound

# rtos domain uses java.util.Timer, which is not present in JDK1.2
#RTOSPACKAGES =		ptolemy.domains.rtos.kernel \
#			ptolemy.domains.rtos.lib

ALLPACKAGES =		$(CODEGENPACKAGES) \
			$(COPERNICUSPACKAGES) \
			$(PTINYPACKAGES) \
			$(GRPACKAGES) \
			$(JAVASOUNDPACKAGES) \
			$(RTOSPACKAGES) \
			ptolemy.plot \
			ptolemy.plot.plotml \
			ptolemy.plot.compat \
			ptolemy.kernel \
			ptolemy.kernel.util \
